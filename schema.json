{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://hostname.com/chiplets.schema.json",
    "title": "Chiplets",
    "description": "Chiplet repository",
    "type": "object",
    "properties": {
        "physical": {
            "type": "object",
            "properties": {
                "area": { 
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "minimum": 0
                        },
                        "unit": {
                            "enum": ["cm^2", "mm^2", "um^2", "nm^2"]
                        }
                    }
                },
                "x-dimension": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "minimum": 0
                        },
                        "unit": {
                            "enum": ["cm", "mm", "um", "nm"]
                        }
                    }
                },
                "y-dimension:" {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "minimum": 0
                        },
                        "unit": {
                            "enum": ["cm", "mm", "um", "nm"]
                        }
                    }
                },
                "process node": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "minimum": 0
                        },
                        "unit": {
                            "enum": ["um", "nm"]
                        }
                    }
                },
                "bumps": {
                    "type": "object",
                    "properties": {
                        "microbump pitch": {
                            "type": "number"
                        },
                        "percent microbumps for IO": {
                            "type": "number"
                        }
                    }
                },
                "network router area": {
                    "type": "number"
                },
                "transistor count": {
                    "type": "integer"
                },
                "components": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": "object",
                            "properties": {
                                "capacity": {
                                    "type": "number"
                                },
                                "latency": {
                                    "type": "number"
                                }
                            }
                        },
                        "cache": {
                            "type": "object",
                            "properties": {
                                "number": {
                                    "type": "number"
                                },
                                "capacity": {
                                    "type": "number"
                                },
                                "levels": {
                                    "type": "number"
                                }
                            }
                        },
                        "FPU": {
                            "type": "boolean"
                        },
                        "GPU": {
                            "type": "boolean"
                        },
                        "modem": {
                            "type": "boolean"
                        },
                        "CPU": {
                            "FLOPS": {
                                "type": "number",
                                "minimum": 0
                            },
                            "cores": {
                                "type": "object",
                                "properties": {
                                    "number of cores": {
                                        "type": "integer"
                                    },
                                    "number of routers in core": {
                                        "type": "integer"
                                    }
                                }
                            }
                        },
                        "clock frequency": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "main functionality": {
            "enum": ["accelerator", "compute", "I/O", "DSP", "memory", "GPU", "FPGA"]
        },
        "communication": {
            "type": "object",
            "properties": {
                "NoC bandwidth": {
                    "type": "number",
                    "minimum": 0
                },
                "bandwidth density": {
                    "type": "number",
                    "minimum": 0
                },
                "cache protocol": {
                    "type": "string"
                },
                "latency": {
                    "type": "number"
                },
                "PCIe": {
                    "type": "object",
                    "properties": {
                        "link width": {
                            "type": "number"
                        },
                        "number of IO lanes": {
                            "type": "integer"
                        }
                    }
                },
                "network interfaces": {
                    "type": "object",
                    "properties": {
                        "number": {
                            "type": "integer"
                        },
                        "position": {
                            "type": "string"
                        }
                    }
                },
                "NVMe": {
                    "type": "boolean"
                },
                "DDR memory channels": {
                    "type": "integer"
                },
                "SISL": {
                    "type": "boolean"
                }
            }
        },
        "IO": {
            "type": "object",
            "properties": {
                "USB": {
                    "type": "boolean"
                },
                "SATA": {
                    "type": "boolean"
                },
                "Ethernet": {
                    "type": "boolean"
                },
                "SPI": {
                    "type": "boolean"
                },
                "UART": {
                    "type": "boolean"
                },
                "I2C": {
                    "type": "boolean"
                }
            }
        },
        "power": {
            "type": "object",
            "properties": {
                "voltage": {
                    "type": "object",
                    "properties": {
                        "min": {
                            "type": "number",
                            "minimum": 0
                        },
                        "max": {
                            "type": "number",
                            "minimum": 0
                        }
                    }
                },
                "power consumption": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "number"
                        },
                        "standby": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "cost": {
            "type": "number"
        },
        "temperature": {
            "type": "object",
            "properties": {
                "thermal resistance": {
                    "type": "number"
                }
            }
        }

    },
    "required": []
}